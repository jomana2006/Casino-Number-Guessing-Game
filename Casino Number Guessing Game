#include <iostream>
#include <cstdlib>
#include <ctime>
using namespace std;
int main() {
	srand(time(0));
	int UserGuess = 0;
	int number_of_tries = 0;
	int targetnumber = rand() % 100 + 1;
	cout << "Welcome to the Casino! \n You are going to guess a number from 1 to 100 that will be generated by the computer." << endl;
	while (UserGuess != targetnumber) {
		cout << "Make your guess: "; 
		cin >> UserGuess;
		number_of_tries++;
		if (UserGuess < targetnumber)
			cout << "Your number is less than the target, try again!" << endl;
		else if (UserGuess > targetnumber)
			cout << "Your number is greater than the target, try again!" << endl;
		else
			cout << "You win!";
			return 0;
	}
}
